@model NavigationPartialViewModel

@{
    Layout = null;
}

<div class="nav-area">
    <div class="search-container box-shadow">
        <div class="nav-head text-center box-shadow">
            <span>@Resources.Labels.Search</span>
        </div>
        <div class="search-body text-center">
            <div>
                <input id="search-box" type="text" class="search-box" />
                <a id="search-btn" class="search-button text-center">
                    <i class="fa fa-search"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="nav-categories-container box-shadow">
        <div class="nav-head text-center box-shadow">
            <span>@Resources.Labels.TripsCategories</span>
        </div>
        <div class="nav-categories-body box-shadow">
            <div>
                @foreach (var category in this.Model.Categories)
                {
                    <a href="/categories/details/@category.Name" class="nav-category-item">
                        @category.Name
                    </a>
                }
            </div>
        </div>
    </div>
</div>
